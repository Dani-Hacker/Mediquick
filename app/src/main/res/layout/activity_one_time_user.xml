<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountManager.OneTimeUserActivity"
    android:orientation="vertical"
    android:paddingRight="20sp"
    android:paddingLeft="20sp"
    android:paddingBottom="100dp"
    android:gravity="center_vertical">



    <LinearLayout
        android:id="@+id/phno_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:fontFamily="@font/abhaya_libre_bold"
            android:text="Create Account"
            android:textColor="@color/red"
            android:textSize="40sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/ph_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your Phone Number"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/send_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Send OTP"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/haveAccount_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/already_account"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/red"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center"
           />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otp_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:inputType="number"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>



        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="NEXT"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/please_wait_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/please_wait"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:visibility="gone"
        />

</LinearLayout>