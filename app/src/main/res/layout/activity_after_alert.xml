<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterAlertActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/names_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Names of Accepted Persons"
        android:padding="10dp"
        android:textColor="@color/red"
        android:background="#ffcdd2"
        android:layout_gravity="top"
        android:gravity="center"
        android:layout_alignParentTop="true"/>

    <ListView
        android:id="@+id/accepted_users_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/names_title"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginBottom="60dp"/>

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="Please wait\nAnybody may \naccept to Help you"
        android:textColor="@color/light_red"/>

    <Button
        android:id="@+id/cancel_alert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="CANCEL ALERT"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>